<section id="page_container">

    <!-- add employee form -->

    <!-- employee creation form container -->
    <div id="add_employee_form_container" class="modal_container">

        <!-- add employee form -->
        <form id="add_employee_form" action="/user/create" method="POST" class="modal">

            <!-- form header -->
            <header id="add_employee_form_header" class="form_header text_content_center">
                Create Employee
            </header>

            <div id="close_cross">
                <img src="https://images.freeimages.com/fic/images/icons/766/base_software/256/close_box_red.png"
                    alt="close-cross-image" height="30" , width="30">
            </div>

            <section id="input_section" class="create_employee_form_input">
                <!-- form inputs -->
                <div class="side_by_side_section">
                    <input type="text" name="firstName" placeholder="Your First Name" required
                        class="left_side_input" />
                    <input type="text" name="lastName" placeholder="Your Last Name" required class="right_side_input" />
                </div>
                <input type="text" name="profilePicture" placeholder="Enter avatar url" required class="plain_input" />
                <input type="date" name="dateOfJoining" placeholder="Pick your joined date" required
                    class="plain_input" />
                <input type="email" name="email" placeholder="Your Email" required class="plain_input" />

                <div class="side_by_side_section">
                    <input type="password" name="confirm_password" placeholder="Confirm Password" required
                        class="left_side_input" />
                    <input type="password" name="password" placeholder="Password" required class="right_side_input" />
                </div>
                <div class="check_box_for_admin_enable">
                    <input type="checkbox" name="type" value="ADMIN" id="enable_admin_checkbox">
                    <label for="type"> Enable as Admin</label>
                </div>
                <div class="text_content_center">
                    <input type="submit" value="Create Employee" id="create_employee_button" class="create_button" />
                </div>
            </section>

        </form>

    </div>

    <!-- performance creation form container -->
    <div id="add_performance_review_form_container" class="modal_container">

        <!-- add employee form -->
        <form id="add_performance_review_form" action="/performance_review_metadata/create-admin" method="POST"
            class="modal">

            <!-- form header -->
            <header id="add_performance_review_form_header" class="form_header text_content_center">
                Provide performance review
            </header>

            <div id="close_cross_for_performance_review">
                <img src="https://images.freeimages.com/fic/images/icons/766/base_software/256/close_box_red.png"
                    alt="close-cross-image" height="30" , width="30">
            </div>

            <section id="input_section" class="create_performance_review_form_input">
                <!-- form inputs -->
                <input type="email" name="fromUser" value="<%= locals.user.email %>"
                    placeholder="add from user email address" required class="plain_input" />
                <input type="email" name="toUser" placeholder="add to user email address" required
                    class="plain_input" />
                <input type="text" name="jobKnowledge" placeholder="Job knowledge out of 10" required
                    class="plain_input" />
                <input type="text" name="workQuality" placeholder="Work quality out of 10" required
                    class="plain_input" />
                <input type="text" name="productivity" placeholder="Productivity out of 10" required
                    class="plain_input" />
                <input type="text" name="technicalSkills" placeholder="Technical skills out of 10" required
                    class="plain_input" />
                <input type="text" name="work" placeholder="Work out of 10" required class="plain_input" />
                <input type="text" name="consistency" placeholder="Consistency out of 10" required
                    class="plain_input" />
                <input type="text" name="attitude" placeholder="Attitude out of 10" required class="plain_input" />
                <input type="text" name="attendance" placeholder="Attendance out of 10" required class="plain_input" />
                <input type="submit" value="Create pr" id="create_performance_review_button" class="create_pr_button" />
            </section>

        </form>

    </div>

    <div id="assign_performance_review_form_container" class="modal_container">

        <!-- add employee form -->
        <form id="assign_performance_review_form" action="/performance_review_metadata/assign" method="post"
            class="modal">

            <!-- form header -->
            <header id="assign_performance_review_form_header" class="form_header text_content_center">
                Assign performance review
            </header>

            <div id="close_cross_for_assign_performance_review">
                <img src="https://images.freeimages.com/fic/images/icons/766/base_software/256/close_box_red.png"
                    alt="close-cross-image" height="30" , width="30">
            </div>

            <section id="input_section" class="create_performance_review_form_input">
                <!-- form inputs -->
                <input type="email" name="fromUser" value="<%= locals.user.email %>"
                    placeholder="add from user email address" required class="plain_input" />
                <input type="email" name="toUser" placeholder="add to user email address" required
                    class="plain_input" />
                <input type="submit" value="Assign pr" id="assign_performance_review_button" class="create_pr_button" />
            </section>

        </form>

    </div>

    <!-- page header -->
    <section id="user_information-container" class="page_header text_content_center">
        <h1>Hi, <%= locals.user.firstName %>
                <%= locals.user.lastName%>, you are an admin</h1>
    </section>

    <!-- page content section -->
    <section id="page_information_container">

        <!-- Employee list -->
        <section id="employee_list_container" class="list_container">

            <!-- employee list header -->
            <header id="employee_list_header" class="list_container_header">

                <!-- employee header information -->
                <div class="list_header_information text_content_center">
                    Employees
                </div>

                <!-- add employee to list section -->
                <a href="/add_employee" id="add_employee_link">
                    <div class="add_element_to_list text_content_center">
                        <img src="https://img.freepik.com/free-icon/add_318-932014.jpg?w=2000" alt="add_item_image"
                            height="50" width="50">
                    </div>
                </a>

            </header>

            <!-- employee list -->
            <% if(employees_list) { %>
                <ul id="employee_list" class="list_elements">
                    <% for (let index=0; index < employees_list.length; index++) { %>
                        <li id="employee_info-container-<%= employees_list[index].id %>" class="employees_list_element"
                            data-employee-id="<%= employees_list[index].id %>">

                            <!-- <a href="/view/employee/<%= employees_list[index].id %>"> -->

                            <!-- employee avatar -->
                            <img id="employee_profile_pic" src="<%= employees_list[index].profilePicture %>"
                                alt="add_item_image" height="100" width="100">

                            <!-- employee name (firstName + lastName) -->
                            <!-- employee inforamtion container -->
                            <div id="employee_name-<%= employees_list[index].id %>" class="employee_info">
                                <p><b>Name :</b> </p>
                                <p contenteditable="true" id="employee_name_info">
                                    <%= employees_list[index].firstName %>
                                        <%= employees_list[index].lastName%>
                                </p>
                                <p><b>Email :</b> </p>
                                <p id="employee_email_info">
                                    <%= employees_list[index].email %>
                                </p>
                            </div>

                            <div id="access_info_section">
                                <!-- employee delete icon -->
                                <a href="/user/update/<%= employees_list[index].id %>"
                                    class="text_content_center employee_update_button"
                                    data-employee-id="<%= employees_list[index].id %>">
                                    <button type="button">Update</button>
                                </a>

                                <!-- employee delete icon -->
                                <a href="/user/delete/<%= employees_list[index].id %>" class="text_content_center"
                                    id="employee_delete_button">
                                    <button type="button">Delete</button>
                                </a>
                            </div>
                            <!-- </a> -->

                            <!-- form to update the user information -->
                            <div id="employee_update_container-<%= employees_list[index].id %>" class="modal_container">

                                <!-- employee detail update form -->
                                <form id="update_employee_form" action="/user/update/<%= employees_list[index].id %>"
                                    method="POST" class="modal">

                                    <!-- form header -->
                                    <header id="add_employee_form_header" class="form_header text_content_center">
                                        Update Employee details
                                    </header>

                                    <!-- close button for form creation -->
                                    <div class="close_cross_for_update_form"
                                        data-employee-id="<%= employees_list[index].id %>">
                                        <img src="https://images.freeimages.com/fic/images/icons/766/base_software/256/close_box_red.png"
                                            alt="close-cross-image" height="30" , width="30">
                                    </div>

                                    <!-- form inputs -->
                                    <section id="input_section" class="update_employee_form_input">

                                        <!-- form inputs -->
                                        <div class="side_by_side_section">
                                            <input type="text" name="firstName" placeholder="Your First Name"
                                                value="<%= employees_list[index].firstName %>"
                                                class="left_side_input" />
                                            <input type="text" name="lastName" placeholder="Your Last Name"
                                                value="<%= employees_list[index].lastName %>"
                                                class="right_side_input" />
                                        </div>

                                        <input type="text" name="profilePicture" placeholder="Enter avatar url" required
                                            value="<%= employees_list[index].profilePicture %>" class="plain_input" />

                                        <input type="date" name="dateOfJoining" placeholder="Pick your joined date"
                                            value="<%= employees_list[index].dateOfJoining %>" class="plain_input" />

                                        <input type="email" name="email" placeholder="Your Email"
                                            value="<%= employees_list[index].email %>" class="plain_input" />

                                        <div class="check_box_for_admin_enable">
                                            <input type="checkbox" name="type" value="ADMIN" id="enable_admin_checkbox">
                                            <label for="type"> Enable as Admin</label>
                                        </div>

                                        <div class="text_content_center">
                                            <input type="submit" value="Update Employee" id="create_employee_button"
                                                class="create_button" />
                                        </div>

                                    </section>

                                </form>

                            </div>
                        </li>
                        <% } %>
                </ul>
                <% } %>



        </section>

        <!-- Performance review list -->
        <section id="performance_review_list" class="list_container">

            <!-- performance_review_list header -->
            <header id="performance_review_list_header" class="list_container_header">

                <!-- performance_review header inforation -->
                <div class="list_header_information text_content_center">
                    Performance_reviews done by others
                </div>

                <!-- add performance review to list section -->
                <a href="/add_performance_review" id="add_performance_review_link">
                    <div class="add_element_to_list text_content_center">
                        <img src="https://img.freepik.com/free-icon/add_318-932014.jpg?w=2000" alt="add_item_image"
                            height="50" width="50">
                    </div>
                </a>

            </header>

            <!-- performance review metadata list -->
            <% if(review_metadata_list) { %>
                <ul id="performance_review_metadata_list" class="list_elements">
                    <% for (let index=0; index < review_metadata_list.length; index++) { %>
                        <li id="performance_review_metadata_info-container-<%= review_metadata_list[index]._id %>"
                            class="review_metadata_list_element"
                            data-review_metadata-id="<%= review_metadata_list[index]._id %>">

                            <!-- performance review metadata date inforamtion -->
                            <!-- performance review metadata user inforamtion -->
                            <a href="/performance_review/<%= review_metadata_list[index]._id %>"
                                data-review-metadata-id="<%= review_metadata_list[index]._id %>"
                                class="view_performance_review_link">

                                <div id="performance_review_metadata_user_info-<%= review_metadata_list[index]._id %>"
                                    class="performance_review_metadata_user_info">
                                    <!-- performance review from user -->
                                    <%= review_metadata_list[index].for.email %>

                                        <div id="down_arrow" class="text_content_center">

                                            <img src="https://png.pngtree.com/png-clipart/20190906/original/pngtree-down-arrow-png-image_4556532.jpg"
                                                alt="down_arrow_image" height="30" width="30">

                                        </div>

                                        <!-- performance review to user -->
                                        <%= review_metadata_list[index].to.email %>
                                </div>

                                <!-- performance review convert from review to done status -->
                                <div id="performance_review_metadata_status_info-<%= review_metadata_list[index]._id %>"
                                    class="performance_review_metadata_status_info text_content_center">

                                    <div class="dropdown">
                                        <button class="dropbtn">
                                            <%= review_metadata_list[index].status %>
                                        </button>

                                    </div>
                                </div>
                            </a>

                            <!-- form container to view the update performance review form -->
                            <div id="update_performance_review_form_container-<%= review_metadata_list[index]._id %>"
                                class="modal_container">

                                <!-- form to show the current information and update the values -->
                                <form
                                    action="/performance_review/update/<%= review_metadata_list[index]._id%>?update_status=DONE"
                                    method="get" class="modal">

                                    <input type="email" name="fromUser"
                                        value="<%= review_metadata_list[index].for.email%>" class="plain_input" />
                                    <input type="email" name="toUser" value="<%= review_metadata_list[index].to.email%>"
                                        class="plain_input" />
                                    <input type="submit" value="Close" id="assign_performance_review_button"
                                        class="create_pr_button" />
                                </form>

                            </div>
                        </li>
                        <% } %>
                </ul>
                <% } %>



        </section>

        <!-- add employee to review list -->
        <section id="add_employee_to_review_list" class="list_container">

            <!-- add employee to review header -->
            <header id="add_employee_list_header" class="list_container_header">

                <!-- add employee to review header information -->
                <!-- performance_review header inforation -->
                <div class="list_header_information text_content_center">
                    Assign performance review
                </div>

                <!-- add performance review to list section -->
                <a href="/assign_performance_review" id="assign_performance_review_link">
                    <div class="add_element_to_list text_content_center">
                        <img src="https://img.freepik.com/free-icon/add_318-932014.jpg?w=2000" alt="add_item_image"
                            height="50" width="50">
                    </div>
                </a>
            </header>

            <!-- performance review metadata list -->
            <% if(assigned_review_metadata_list) { %>
                <ul id="performance_review_metadata_list" class="list_elements">
                    <% for (let index=0; index < assigned_review_metadata_list.length; index++) { %>
                        <li id="performance_review_metadata_info-container-<%= assigned_review_metadata_list[index]._id %>"
                            class="review_metadata_list_element"
                            data-review_metadata-id="<%= assigned_review_metadata_list[index]._id %>">

                            <!-- performance review metadata date inforamtion -->
                            <a href="/performance_review/<%= assigned_review_metadata_list[index]._id %>"
                                data-review-metadata-id="<%= assigned_review_metadata_list[index]._id %>"
                                id="view_performance_review_link">
                                <div id="performance_review_metadata_user_info-<%= assigned_review_metadata_list[index]._id %>"
                                    class="performance_review_metadata_user_info">
                                    <!-- performance review from user -->
                                    <%= assigned_review_metadata_list[index].for.email %>

                                        <div id="down_arrow" class="text_content_center">
                                            <img src="https://png.pngtree.com/png-clipart/20190906/original/pngtree-down-arrow-png-image_4556532.jpg"
                                                alt="down_arrow_image" height="30" width="30">
                                        </div>
                                        <!-- performance review to user -->
                                        <%= assigned_review_metadata_list[index].to.email %>
                                </div>

                                <!-- performance review convert from review to done status -->
                                <div id="performance_review_metadata_status_info-<%=assigned_review_metadata_list[index]._id %>"
                                    class="performance_review_metadata_status_info text_content_center">

                                    <button class="dropbtn">
                                        <%= assigned_review_metadata_list[index].status %>
                                    </button>
                                </div>
                            </a>
                        </li>
                        <% } %>
                </ul>
                <% } %>

        </section>

    </section>

</section>